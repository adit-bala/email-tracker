{
    "manifest_version": 3,
    "name": "Email Tracker",
    "description": "See if recipients have opened your email",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/mail/u/*/#*/?compose=*"
            ],
            "js": [
                "js/inject.js"
            ]
        }
    ],
    "permissions": [
        "scripting",
        "activeTab"
    ]    
  }